{
  "paths": {
    "/users/me/drafts": {
      "post": {
        "parameters": [
          {
            "name": "fields",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "example": "id"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Issue"
                }
              }
            }
          }
        }
      }
    },
    "/config": {
      "description": "",
      "get": {
        "parameters": [
          {
            "name": "fields",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "example": "ring(url)"
          }
        ],
        "responses": {
          "200": {
            "description": "single FrontendConfig",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FrontendConfig"
                }
              }
            }
          }
        }
      }
    },
    "/visibilityGroups": {
      "description": "",
      "post": {
        "parameters": [
          {
            "name": "fields",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "example": "groupsWithoutRecommended(allUsersGroup,icon,id,name,ringId),recommendedGroups(allUsersGroup,icon,id,name,ringId),visibilityUsers(avatarUrl,email,fullName,guest,id,issueRelatedGroup(icon),login,ringId)"
          },
          {
            "name": "$skip",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "$top",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/VisibilityGroupsRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "List of applicable users/groups",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VisibilityGroups"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AttachmentActivityItem": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "field": {
                "$ref": "#/components/schemas/FilterField"
              }
            }
          }
        ]
      },
      "CustomFieldActivityItem": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "field": {
                "$ref": "#/components/schemas/FilterField"
              }
            }
          }
        ]
      },
      "LinksActivityItem": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "field": {
                "$ref": "#/components/schemas/FilterField"
              }
            }
          }
        ]
      },
      "SprintActivityItem": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "field": {
                "$ref": "#/components/schemas/FilterField"
              }
            }
          }
        ]
      },
      "TextMarkupActivityItem": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "field": {
                "$ref": "#/components/schemas/FilterField"
              }
            }
          }
        ]
      },
      "FilterField": {
        "properties": {
          "presentation": {
            "type": "string",
            "readOnly": true
          }
        }
      },
      "StateMachineIssueCustomField": {
        "description": "Represents the issue field with attached state machine.",
        "allOf": [
          {
            "type": "object",
            "properties": {
              "hasStateMachine": {
                "type": "boolean",
                "readOnly": true
              },
              "value": {
                "$ref": "#/components/schemas/EnumBundleElement"
              }
            }
          }
        ]
      },
      "FrontendConfig": {
        "type": "object",
        "properties": {
          "ring": {
            "$ref": "#/components/schemas/RingFrontendConfig"
          }
        },
        "discriminator" : {
          "propertyName" : "$type"
        }
      },
      "RingFrontendConfig": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string"
          }
        },
        "discriminator" : {
          "propertyName" : "$type"
        }
      },
      "VisibilityGroupsRequest": {
        "type": "object",
        "properties": {
          "issues": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Issue"
            }
          },
          "projects": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Project"
            }
          },
          "skip": {
            "type": "integer",
            "format": "int32"
          },
          "prefix": {
            "type": "string"
          },
          "top": {
            "type": "integer",
            "format": "int32"
          }
        },
        "discriminator" : {
          "propertyName" : "$type"
        }
      },
      "VisibilityGroups": {
        "type": "object",
        "properties": {
          "groupsWithoutRecommended": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/UserGroup"
            }
          },
          "recommendedGroups": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/UserGroup"
            }
          },
          "visibilityUsers": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/User"
            }
          }
        },
        "discriminator" : {
          "propertyName" : "$type"
        }
      }
    }
  }
}
